<Window x:Class="budgetPlannerWPF.Expenses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:budgetPlannerWPF"
        mc:Ignorable="d"
        Title="Expenses" Height="450" Width="800">
    <Grid Margin="0,0,0,-16" >

        <Grid x:Name="BG" RenderTransformOrigin="0.497,0.662">

            <Grid.Background>

                <ImageBrush x:Name="_img_bg"
                            ImageSource="backgrounds/background.jpg" 
                            Stretch="Fill"/>

            </Grid.Background>
            <TextBlock x:Name="displayExpensesTextBlock" HorizontalAlignment="Center" Margin="0,108,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="182" Width="780" FontSize="15" Foreground="Gold"/>

            <Label Content="THANK YOU FOR USING THE BUDGET PLANNER APP" FontSize="15" Foreground="Blue" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="162,295,0,0"/>

            <Button Content="EXIT" HorizontalAlignment="Left" Margin="297,345,0,0" VerticalAlignment="Top" Width="89" Height="41" Background="Red" Click="Button_Click"/>

        </Grid>


    </Grid>
</Window>
